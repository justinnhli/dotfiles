#!/bin/bash

orphan_with_suffix() {
	suffix="$2"
	find "$1" -name ".*$suffix" | grep -v '.dropbox.cache' | while read -r f; do
		basename="${f##*/}"
		dirname="${f%/*}"
		original="$dirname/$(echo "$basename" | sed "s/^\\.\\(.*\\)$suffix\$/\\1/")"
		# TODO also delete if original file is newer than .un~
		if [ ! -f "$original" ] || [ "$(find "$f" -mtime +10)" != "" ]; then
			if rm -f "$f"; then
				echo deleted "$f"
			else
				echo '!!!' Could not delete "$f"
			fi
		fi
	done
}

if [ $# -eq 0 ]; then
	dirs=( "." )
else
	dirs=( "$@" )
fi
for dir in "${dirs[@]}"; do
	for suffix in '.un~' '.swp'; do
		orphan_with_suffix "$dir" "$suffix"
	done
done
