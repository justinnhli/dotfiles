[user]
	name = Justin Li
	email = justinnhli@gmail.com
[core]
	editor = nvim
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[push]
	default = simple
[alias]
	# staging
	unstage = restore --staged
	precommit = diff --cached
	# rebasing
	abort = rebase --abort
	continue = rebase --continue
	# stashes
	stashes = stash list
	# branches
	new-branch = switch --create
	branches = branch --all
	# remotes
	remotes = remote --verbose
	# other
	aliases = config --get-regexp ^alias\\.
