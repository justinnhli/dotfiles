[user]
	name = Justin Li
	email = justinnhli@gmail.com
[core]
	editor = nvim
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[push]
	default = simple
[alias]
	# pushing
	prepush = log origin..HEAD
	# staging
	unstage = restore --staged
	precommit = diff --cached
	# stashes
	stashes = stash list
	# branches
	branches = branch --all
	new-branch = switch --create
	delete-branch = branch --delete
	force-delete-branch = branch --delete --force
	# remotes
	remotes = remote --verbose
	# other
	aliases = config --get-regexp ^alias\\.
	log-graph = log --all --decorate --graph --abbrev-commit --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ai%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset)'
