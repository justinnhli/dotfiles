[user]
	name = Justin Li
	email = justinnhli@gmail.com
[core]
	editor = nvim
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[push]
	default = simple
[alias]
	# staging
	unstage = reset HEAD --
	precommit = diff --cached
	# rebasing
	abort = rebase --abort
	continue = rebase --continue
	# stashes
	stashes = stash list
	# branches
	branches = branch -a
	# remotes
	remotes = remote -v
