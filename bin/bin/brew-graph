#!/bin/sh

echo "digraph {"
brew list | while read src; do
	echo "	\"$src\""
done
brew leaves | sed 's#.*/##' | while read src; do
	echo "	\"$src\" [style=filled, shape=box, fillcolor=\"#73D216\"]"
done
brew list | while read src; do
	brew uses --installed "$src" | while read dest; do
		echo "	\"$(echo "$src" | sed 's#.*/##')\" -> \"$(echo "$dest" | sed 's#.*/##')\""
	done
done
echo "}"
