<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

    <menu id="apps-graphics-menu" label="Graphics">
        <item label="Gimp">
            <action name="Execute">
                <command>gimp</command>
            </action>
        </item>
        <item label="GThumb">
            <action name="Execute">
                <command>gthumb</command>
            </action>
        </item>
        <item label="Inkscape">
            <action name="Execute">
                <command>inkscape</command>
            </action>
        </item>
        <item label="yEd">
            <action name="Execute">
                <command>yed</command>
            </action>
        </item>
    </menu>

    <menu id="apps-internet-menu" label="Internet">
        <item label="Chrome">
            <action name="Execute">
                <command>chromium --incognito</command>
            </action>
        </item>
        <item label="Deluge">
            <action name="Execute">
                <command>deluge</command>
            </action>
        </item>
        <item label="Dropbox">
            <action name="Execute">
                <command>dropbox</command>
            </action>
        </item>
        <item label="FileZilla">
            <action name="Execute">
                <command>filezilla</command>
            </action>
        </item>
        <item label="Firefox">
            <action name="Execute">
                <command>firefox</command>
            </action>
        </item>
        <item label="JDownloader">
            <action name="Execute">
                <command>JDownloader</command>
            </action>
        </item>
        <item label="Thunderbird">
            <action name="Execute">
                <command>thunderbird</command>
            </action>
        </item>
    </menu>

    <menu id="apps-multimedia-menu" label="Multimedia">
        <item label="AlsaMixer">
            <action name="Execute">
                <command>xfce4-terminal -e alsamixer</command>
            </action>
        </item>
        <item label="OpenShot">
            <action name="Execute">
                <command>openshot</command>
            </action>
        </item>
        <item label="VLC">
            <action name="Execute">
                <command>vlc</command>
            </action>
        </item>
    </menu>

    <menu id="apps-office-menu" label="Office">
        <item label="Database">
            <action name="Execute">
                <command>soffice -base</command>
            </action>
        </item>
        <item label="Document">
            <action name="Execute">
                <command>soffice -writer</command>
            </action>
        </item>
        <item label="Drawing">
            <action name="Execute">
                <command>soffice -draw</command>
            </action>
        </item>
        <item label="Evince">
            <action name="Execute">
                <command>evince</command>
            </action>
        </item>
        <item label="Formula">
            <action name="Execute">
                <command>soffice -math</command>
            </action>
        </item>
        <item label="Presentation">
            <action name="Execute">
                <command>soffice -impress</command>
            </action>
        </item>
        <item label="Spreadsheet">
            <action name="Execute">
                <command>soffice -calc</command>
            </action>
        </item>
    </menu>

    <menu id="system-menu" label="Utitlies">
        <item label="BleachBit">
            <action name="Execute">
                <command>bleachbit</command>
            </action>
        </item>
        <item label="Baobab">
            <action name="Execute">
                <command>baobab</command>
            </action>
        </item>
        <item label="Guake">
            <action name="Execute">
                <command>guake</command>
            </action>
        </item>
        <item label="Terminal">
            <action name="Execute">
                <command>qterminal</command>
            </action>
        </item>
        <item label="Thunar">
            <action name="Execute">
                <command>thunar</command>
            </action>
        </item>
        <separator />
        <item label="Reconfigure Openbox">
            <action name="Reconfigure" />
        </item>
    </menu>

    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal">
            <action name="Execute">
                <command>qterminal</command>
            </action>
        </item>
        <item label="Firefox">
            <action name="Execute">
                <command>firefox</command>
            </action>
        </item>
        <menu id="apps-graphics-menu"/>
        <menu id="apps-internet-menu"/>
        <menu id="apps-multimedia-menu"/>
        <menu id="apps-office-menu"/>
        <menu id="system-menu"/>
        <separator />
        <item label="Lock Screen">
            <action name="Execute">
                <command>xscreensaver-command -activate</command>
            </action>
        </item>
        <item label="Log Out">
            <action name="Exit">
                <prompt>yes</prompt>
            </action>
        </item>
    </menu>

</openbox_menu>
